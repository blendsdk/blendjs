#!/bin/bash

echo "Building BlendJS"

DIRNAME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BUILD_DIR=$DIRNAME/../build

if [ -d $BUILD_DIR ]; then
    echo "Removing " $BUILD_DIR;
	rm -fR $BUILD_DIR
fi

cd $DIRNAME/../blend
compass compile
cp -fR $DIRNAME/../blend/themes/etc/fonts $BUILD_DIR/css/
tsc
